<script>
class Tivi{
    constructor(chanel, volume, status){
        this.chanel = chanel;
        this.volume = volume;
        this.status = status;

    }
    setChanel(newChanel){
        this.chanel = newChanel;
    }
    setVolume(newVolume){
        this.volume = newVolume;
    }

}

class Remote{
    constructor(id){
        this.id = id;
        

    }
    changeChanel(newChanel, tivi){
        //goi phuong thuc thay doi kenh tv
        tivi.setChanel(newChanel);
    }
    changeVolume(newVolume, tivi){
        //goi phuong thuc thay doi am luong tv
        tivi.setVolume(newVolume);
    }

}


let tivi1 = new Tivi(0,0,true);
let tivi2= new Tivi(0,0,true);
let rm1 = new Remote(1);

rm1.changeChanel(7, tivi1);
rm1.changeChanel(3, tivi1);
rm1.changeVolume(2, tivi1);

rm1.changeChanel(5, tivi2);
rm1.changeVolume(3, tivi2);


</script>
